<UserControl x:Class="_01Kharchenko.Views.GoroscopeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_01Kharchenko.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250" MinHeight="200" MinWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Choose your birthday, please" Margin="10"></TextBlock>
        <DatePicker Grid.Row="1" Grid.Column="0" Width="230" MaxWidth="300" HorizontalAlignment="Left"></DatePicker>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Your age:" Margin="10"></TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Your zodia sigh(chinese):" Margin="10"></TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Your zodiac sign(western):" Margin="10"></TextBlock>
    </Grid>
</UserControl>
